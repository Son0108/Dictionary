<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import de.jensd.fx.glyphs.materialdesignicons.MaterialDesignIconView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainPane" prefHeight="700.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.Dictionary.Controllers.MainController">
   <left>
      <VBox prefHeight="700.0" prefWidth="200.0" style="-fx-background-color: #000000;" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onMouseClicked="#handleButtonActionHome" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #000000;" textAlignment="CENTER">
               <graphic>
                  <MaterialDesignIconView fill="#c35656" glyphName="GOOGLE_TRANSLATE" size="70" />
               </graphic>
            </Button>
            <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onMouseClicked="#handleButtonActionInsert" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #000000;" text="INSERT" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="Javanese Text" size="24.0" />
               </font>
               <graphic>
                  <FontAwesomeIconView fill="WHITE" glyphName="PLUS" size="25" />
               </graphic>
            </Button>
            <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onMouseClicked="#handleButtonActionSearch" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #000000;" text="SEARCH" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="Javanese Text" size="24.0" />
               </font>
               <graphic>
                  <FontAwesomeIconView fill="WHITE" glyphName="SEARCH" size="25" />
               </graphic>
            </Button>
         </children>
      </VBox>
   </left>
</BorderPane>
